{
  "name": "ytdlp-desktop-app",
  "version": "1.0.0",
  "description": "一個簡單易用的 yt-dlp 桌面應用程式",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build"
  },
  "keywords": [
    "yt-dlp",
    "youtube",
    "downloader",
    "desktop",
    "electron"
  ],
  "author": "Harry Yuan",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "electron": "^27.0.0",
    "axios": "^1.6.0",
    "styled-components": "^6.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.6.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.harryyuan.ytdlp-desktop",
    "productName": "yt-dlp Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
